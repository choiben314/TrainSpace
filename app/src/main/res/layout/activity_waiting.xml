<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:translationX="-400dp"
        app:srcCompat="@drawable/loader" />

    <TextView
        android:id="@+id/find_train_car_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_you_a_train_car"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/finding_least_crowded_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/we_re_finding_you_the_least_crowded_car_to_keep_you_safe"
        android:gravity="center"
        android:layout_marginTop="12dp"/>
</LinearLayout>